<div class="row">
    {{#each items}}

    <div class="col-sm-4">
        <div class="card mt-4" style="width: 22rem;">
            <div class="card-header">
                <h4>{{title}} - <small>{{importance}}</small></h4>
            </div>
            <div class="card-body  mb-2">
                <p>Status - {{status}}</p>
                <p>Bugnumber - {{bugnumber}}</p>
                <p>{{query}}</p>
                <p>{{description}}</p>
                {{!--
                <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
                <form action="/ideas/{{id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" class="btn btn-danger btn-block" value="Delete">
                </form> --}}
            </div>
             <div class="card-footer text-muted">
                {{date}}
            </div>
        </div>
    </div>

    {{else}}

    <p>No video ideas listed</p>
    {{/each}}
</div>